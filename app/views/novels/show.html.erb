<div class="row">
  <h3><%= @novel.title %>
  <% if current_user == @novel.user %>
    <%= link_to '編集', edit_novel_path, class: 'btn btn-xs btn-default' %>
    <%= link_to '削除', @novel, method: :delete, data: { confirm: "本当に削除してよろしいですか?" }, class: 'btn btn-danger btn-xs' %>
  <% end %>
  </h3>
  <div class="col-xs-3">
    <li>作者名:<%= link_to  @novel.user.user_name + '@'+ @novel.user.user_code, user_path(@novel.user) %></li>
    <li>投稿日:<%= @novel.created_at.strftime("%Y/%m/%d") %></li>
    <li>タグ:</li>
    <li>雰囲気:<%= @novel.atmosphere%></li>
    <li>ページ数:<%= @novel.chapters.count %>ページ</li>
    <li>購読者数:XX</li>
    <li>応援数:XX</li>
  </div>
  <div class="col-xs-7">
    <h4>あらすじ</h4>
    <div class="panel panel-default">
      <div class="panel-body"><%= @novel.resume %></div>
    </div>
  </div>
</div>
<h2>
<div class="panel panel-default">
  <div class="panel-body"><%= render 'chapters/chapters', chapters: @novel.chapters.order('created_at').page(params[:page]) %></div>
</div>
</h2>