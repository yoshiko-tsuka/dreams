<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2><%= link_to @novel.title, @novel %></h2>
        <%= form_for([@novel, @chapter]) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-group">
              <%= f.label :chapter_title, '章タイトル(最大100文字)' %>
              <%= f.text_field :chapter_title, class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :content, '文章(必須)(最大1万文字)' %>
              <%= f.text_area :content, class: 'form-control', rows: 10, placeholder: 'ここに書くと薄く文字が入ります！' %>
            </div>

            <div class="text-center">
              <%= f.submit '投稿', class: 'btn btn-info' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>