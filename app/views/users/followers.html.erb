<div class="row">
  <h3><%= @user.user_name %></h3>
  <h5><%= '@'+ @user.user_code %></h5>
  <div class="container">
    <div class="col-xs-2">
      <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
    </div>
    <div class="col-xs-8">
      <%= render 'relationships/follow_button', user: @user %>
      <h4>プロフィール</h4>
      <div class="panel panel-default">
        <div class="panel-body"><%= @user.profile %></div>
      </div>
    </div>
    <div class="col-xs-2">
      <% if current_user == @user %>
        <%= link_to '編集', edit_user_path, class: 'btn btn-lg btn-default' %>
      <% end %>
    </div>
  </div>
  <ul class="nav nav-tabs nav-justified">
    <% if current_user == @user %>
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>自分の作品 <span class="badge"><%= @count_novels %>作品</span><% end %></li>
    <% else %>
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %><%= @user.user_name %>さんの作品 <span class="badge"><%= @count_novels %>作品</span><% end %></li>
    <% end %>
    <li class="<%= 'active' if current_page?(subscribes_user_path(@user)) %>"><%= link_to subscribes_user_path(@user) do %>購読作品 <span class="badge"><%= @count_subscribes %></span><% end %></li>
    <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>フォロー <span class="badge"><%= @count_followings %></span><% end %></li>
    <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>フォロワー <span class="badge"><%= @count_followers %></span><% end %></li>
  </ul>
  <%= render 'users', users: @followers %>
</div>